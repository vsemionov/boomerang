{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },


  "files": [
    "web/src/app/app.module.ts",
    "web/src/main.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "web/aot",
   "skipMetadataEmit" : true
 }
}
